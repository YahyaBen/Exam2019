@model Examen_2019.Models.Marque

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Marque</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Libelle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Libelle)
        </dd>
    </dl>
</div>


@if (Model.voitures.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    Matricule
                </th>
                <th>
                    Couleur
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.voitures)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Matricule)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Couleur)
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-danger" > Aucune voiture disponible pour cette marque ! </div>
}


<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
